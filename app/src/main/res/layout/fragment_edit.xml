<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?actionBarSize"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_views_margin_top"
        android:labelFor="@id/title_edit"
        android:text="@string/title_label"
        android:textAlignment="center"
        android:textSize="@dimen/edit_label_text_size" />

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/edit_note_padding"
        android:paddingEnd="@dimen/edit_note_padding"
        android:layout_marginTop="@dimen/note_edit_field_margin_top"
        android:layout_marginStart="@dimen/edit_fields_margin_side"
        android:layout_marginEnd="@dimen/edit_fields_margin_side"
        android:hint="@string/title_label"
        android:inputType="textCapSentences"/>

    <TextView
        android:id="@+id/description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/description_edit"
        android:layout_marginTop="@dimen/edit_views_margin_top"
        android:text="@string/description_label"
        android:textAlignment="center"
        android:textSize="@dimen/edit_label_text_size"/>

    <EditText
        android:id="@+id/description_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/edit_note_padding"
        android:paddingEnd="@dimen/edit_note_padding"
        android:layout_marginStart="@dimen/edit_fields_margin_side"
        android:layout_marginEnd="@dimen/edit_fields_margin_side"
        android:layout_marginTop="@dimen/note_edit_field_margin_top"
        android:hint="@string/description_label"
        android:inputType="textMultiLine"/>

    <View
        android:id="@+id/color_view"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/edit_fields_margin_side"
        android:layout_marginEnd="@dimen/edit_fields_margin_side"
        android:layout_marginTop="@dimen/edit_views_margin_top"
        android:layout_height="@dimen/color_view_height"
        tools:background="@color/colorAccent"/>


</android.support.v7.widget.LinearLayoutCompat>